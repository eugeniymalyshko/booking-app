generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Table {
	id Int @id @default(autoincrement())
	label String
	capacity Int
	positionX Int
	positionY Int 
}

model Reservation {
	id Int @id @default(autoincrement())
	firstName String
	lastName String
	tableId Int
	startAt DateTime @db.Timestamptz(3)
	endAt DateTime? @db.Timestamptz(3)
	createdAt DateTime  @db.Timestamptz(3) @default(now())
}